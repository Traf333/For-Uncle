<%= form_for(:session, url: sessions_path) do |f| %>

  <%= f.label :name, "Продавец" %>
  <%= f.text_field :name %>

  <%= f.label :password, "Пароль" %>
  <%= f.password_field :password %>

  <%= f.submit "Войти", class: "btn btn-large btn-primary" %>
<% end %>

<p>Новый продавец? <%= link_to "Зарегистрироваться", new_seller_path %></p>
 
